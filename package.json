{
    "name": "tafrigh-cli",
    "version": "1.4.2",
    "packageManager": "bun@1.2.14",
    "description": "CLI for using the tafrigh library.",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "bin": {
        "tafrigh-cli": "./dist/index.js"
    },
    "type": "module",
    "scripts": {
        "start": "bun run src/index.ts",
        "build": "bunx tsdown --config tsdown.config.ts",
        "postbuild": "chmod +x dist/index.js",
        "compile": "bun run build",
        "lint": "bunx biome check .",
        "format": "bunx biome format .",
        "test": "bun test"
    },
    "files": [
        "dist/index.js"
    ],
    "keywords": [
        "srt",
        "transcription",
        "transcript",
        "tafrigh",
        "video",
        "nodejs"
    ],
    "author": "Ragaeeb Haq",
    "license": "MIT",
    "dependencies": {
        "@distube/ytdl-core": "4.16.12",
        "@distube/ytpl": "^1.2.3",
        "cli-welcome": "^3.0.1",
        "conf": "^15.0.2",
        "fb-downloader-scrapper": "^3.0.1",
        "log-symbols": "^7.0.1",
        "meow": "^14.0.0",
        "mime-types": "^3.0.1",
        "open": "^11.0.0",
        "paragrafs": "^1.5.1",
        "picocolors": "^1.1.1",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "rabbito": "^1.0.0",
        "tafrigh": "^4.1.0",
        "twitter-downloader": "^1.1.8"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.5",
        "@semantic-release/changelog": "^6.0.3",
        "@types/mime-types": "^3.0.1",
        "@types/node": "^24.10.1",
        "semantic-release": "^25.0.2",
        "tsdown": "^0.16.4"
    },
    "overrides": {
        "https-proxy-agent": "5.0.1"
    }
}
